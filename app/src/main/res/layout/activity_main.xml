<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:nextFocusRight="@id/blfNavBar"
        />

    <androidx.leanback.widget.BrowseFrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:nextFocusLeft="@id/container"
        android:id="@+id/blfNavBar"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            >

            <TextView
                android:id="@+id/btn_search"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Search"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"

                />

            <TextView
                android:id="@+id/btn_home"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Home"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />

            <TextView
                android:id="@+id/btn_movies"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Movies"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_movie_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />

            <TextView
                android:id="@+id/btn_tv"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="TV"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_tv_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />

            <TextView
                android:id="@+id/btn_sports"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Sports"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_sports_cricket_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />




            <TextView
                android:id="@+id/btn_settings"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_marginTop="20dp"
                android:text="Settings"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_settings_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />
            <TextView
                android:id="@+id/btn_language"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Language"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_g_translate_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />
            <TextView
                android:id="@+id/btn_genre"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:focusable="true"
                android:text="Genre"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_baseline_family_restroom_24"
                android:background="@drawable/selector_menu"
                android:textColor="@color/text_selector_white_grey"
                />

        </LinearLayout>

    </androidx.leanback.widget.BrowseFrameLayout>

</merge>